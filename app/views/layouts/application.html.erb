<!DOCTYPE html>
<html>
<head>
  <title>TweetConversationViewer</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script type="text/javascript" src="assets/tooltipsy.min.js">
</script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="menubar">
    <div id="logo">
      TWTTR FRGMNTS
    </div>
    <div id="signin">
      <% if user_signed_in? %>
        <div class="signin-text">
          @<%= @screen_name %>
          <%= link_to "(Sign out)", destroy_user_session_path,:method => :delete %>
        </div>
        <div id="user-image" style="background-image: url(<%= @image %>); height: 50px; width: 50px; float: right">
        </div>
      <% else %>
        <div class="signin-text">
          <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %>
        </div>
      <% end %>
    </div>  
  </div>

<%= yield %>


</body>
</html>
